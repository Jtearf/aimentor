# Required environment variables for AIMentor platform
# Copy this file to .env and fill in the values

# Environment (development, staging, production)
ENVIRONMENT=development

# Server configuration
PORT=8000
FRONTEND_URL=http://localhost:5173

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# Database (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-key
SUPABASE_JWT_SECRET=your-jwt-secret-from-supabase-dashboard

# AI Services
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_REQUEST_TIMEOUT_SECONDS=30
OPENAI_MAX_RETRIES=3
OPENAI_RETRY_DELAY_SECONDS=2

# Payment processor (e.g., Paystack)
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key
WEBHOOK_SECRET=your-webhook-secret-for-payment-callbacks

# Initial admin setup (only used by init_db.py)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=secure-password-here
ALLOW_DB_INIT=false
